<% if user_signed_in? %>
  <h2>Current Friends</h2>
  <div class="table-responsive">
  <table class="table table-dark table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone number</th>
        <th>Twitter</th>
        <th>Linkedin</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
              <td><%= link_to friend.first_name + ' ' + friend.last_name, friend, class: "btn-outline-info" %></td>
              <td><%= friend.email %></td>
              <td><%= friend.phone_number %></td>
              <td><%= friend.twitter %></td>
              <td><%= friend.linkedin %></td>
              <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-info btn-sm" %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    </div>
    <br>
    <%= link_to 'New Friend', new_friend_path, class: 'btn btn-info' %>
  <% else %>
    <h1>Sign In or Sign Up to see your friends list ðŸ˜„! </h1>
<% end %>
